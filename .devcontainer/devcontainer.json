{
  "name": "humble-minimal",

  "build": {
    "dockerfile": "../docker/Dockerfile",
    "context": ".."
  },

  "remoteUser": "ros",

  "workspaceMount": "source=${localWorkspaceFolder},target=/home/ros/ros2_ws,type=bind",
  "workspaceFolder": "/home/ros/ros2_ws",

  "runArgs": [
    "--net=host",
    "--privileged",
    "--volume=/dev:/dev",

    "-e", "DISPLAY=${localEnv:DISPLAY}",
    "-v", "/tmp/.X11-unix:/tmp/.X11-unix:rw"
  ],

  "containerEnv": {
    "ROS_DOMAIN_ID": "0",
    "ROS_LOCALHOST_ONLY": "0"
  },

  "postCreateCommand": [
    "sudo chown -R ros:ros /home/ros/ros2_ws",
    "echo 'source /opt/ros/humble/setup.bash' >> ~/.bashrc",
    "echo '[ -f /home/ros/ros2_ws/install/setup.bash ] && source /home/ros/ros2_ws/install/setup.bash' >> ~/.bashrc"
  ]
}